{
    "name": "vscode-onetab",
    "displayName": "vscode-onetab",
    "description": "Keep the opened tabs amount below specified limit",
    "version": "0.1.0",
    "publisher": "rosco9awj",
    "engines": {
        "vscode": "^1.25.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/alexjoyner/vscode-onetab"
    },
    "icon": "icon.png",
    "homepage": "https://github.com/alexjoyner/vscode-onetab",
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "vscode-onetab",
            "properties": {
                "onetab.maximumOpenedTabs": {
                    "type": "number",
                    "default": 1,
                    "description": "the maximum amount of tabs that will be keep open",
                    "minimum": 1
                },
                "onetab.applyLimitFor": {
                    "type": "string",
                    "default": "window",
                    "description": "apply the maximum amount of tabs for window|editorGroup",
                    "enum": [
                        "window",
                        "editorGroup"
                    ]
                },
                "onetab.switchWithCurrentTab": {
                    "type": "boolean",
                    "default": false,
                    "description": "once limit of maximum tab is reached, switch the newly opened file with current active tab instead of the older one"
                }
            }
        }
    },
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
